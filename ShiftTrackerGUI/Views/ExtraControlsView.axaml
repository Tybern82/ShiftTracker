<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="120" Width="500" Height="120"
             x:Class="ShiftTrackerGUI.ExtraControlsView">
  <HeaderedContentControl Classes="GroupBox" Header="Details">
    <Grid ColumnDefinitions="auto,auto,auto,auto" RowDefinitions="*" HorizontalAlignment="Center">
      <Button Classes="MainWindowButton" Grid.Row="0" Grid.Column="0" IsEnabled="True" Content="Pref. Name" Name="btnPrefName" />
      <Button Classes="MainWindowButton" Grid.Row="0" Grid.Column="1" IsEnabled="False" Content="Survey" Name="btnTriggerSurvey" />
      <Button Classes="MainWindowButton" Grid.Row="0" Grid.Column="2" IsEnabled="False" Content="Skip Survey" Name="btnSkipSurvey" />
      <Button Classes="MainWindowButton" Grid.Row="0" Grid.Column="3" IsEnabled="False" Content="Add Note" Name="btnAddNote" />
    </Grid>
  </HeaderedContentControl>
</UserControl>
