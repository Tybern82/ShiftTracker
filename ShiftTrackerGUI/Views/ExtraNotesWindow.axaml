<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:ShiftTrackerGUI.Controls"
        xmlns:models="using:ShiftTrackerGUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ShiftTrackerGUI.ExtraNotesWindow"
        x:DataType="models:NoteStore"
        Title="ExtraNotesWindow">
  <Design.DataContext>
    <models:BasicNoteStore />
  </Design.DataContext>
  <Grid ColumnDefinitions="*" RowDefinitions="*,auto">
    <controls:NotesControl NoteContent="{Binding NoteContent}" Grid.Row="0" Grid.Column="0" />
    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" >
      <Button Name="btnSave" Content="Save" Classes="MainWindowButton" />
      <Button Name="btnCancel" Content="Cancel" Classes="MainWindowButton" />
    </StackPanel>
    
  </Grid>
</Window>
