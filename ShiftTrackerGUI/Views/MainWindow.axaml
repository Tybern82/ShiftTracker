<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ShiftTrackerGUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ShiftTrackerGUI.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="720" MinHeight="520"
        x:Class="ShiftTrackerGUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"        
        RequestedThemeVariant="Light"
        Title="ShiftTrackerGUI">
  <Grid RowDefinitions="*,auto" ColumnDefinitions="*">
    <ScrollViewer>
      <views:MainView Name="pMainView" Grid.Row="0" Grid.Column="0" />
    </ScrollViewer>
    <Grid Name="statusPanel" RowDefinitions="*" ColumnDefinitions="*" Grid.Row="1" Grid.Column="0">
      <TextBox Name="statusBarText" IsEnabled="False" Height="20" TextAlignment="Right" Grid.Row="0" Grid.Column="0" /> 
    </Grid>
  </Grid>
</Window>
